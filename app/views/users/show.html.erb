<div class="container mt-5">
  <h1 class="text-center mb-4">User Profile</h1>

  <div class="card">
    <div class="card-body">
    <% if @user.profile_photo.attached? %>
    <%= image_tag @user.profile_photo, class: "rounded-circle mb-3", alt: "Profile Photo", width: "100", height: "100" %>
  <% else %>
    <p>No profile photo uploaded</p>
  <% end %>

      <h5 class="card-title"><%= @user.name || 'No name provided' %></h5>
      <p class="card-text"><strong>Email:</strong> <%= @user.email %></p>
      <p class="card-text"><strong>Practice:</strong> <%= @user.practice %></p>
      <p class="card-text"><strong>Grade:</strong> <%= @user.grade %></p>
      <p class="card-text"><strong>Skills:</strong> <%= @user.skills&.join(', ') || 'No skills listed' %></p>
      <p class="card-text"><strong>Interest:</strong> <%= @user.interest || 'No interest provided' %></p>
      <p class="card-text"><strong>Experience:</strong> <%= @user.experience || 'No experience provided' %></p>
      <p class="card-text"><strong>Bench:</strong> <%= @user.bench ? 'Currently on bench' : 'Not on bench' %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Back to Users", users_path, class: 'btn btn-secondary' %>
  </div>
</div>