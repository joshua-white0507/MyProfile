<div class="container mt-5" style="background-color: #EEEEEE; padding: 20px; border-radius: 8px;">
  <h1 class="text-center mb-4" style="color: #23548F;">User Profile</h1>

  <div class="card shadow-sm" style="border: none;">
    <div class="card-body">
      <div class="row align-items-center">
        <!-- Profile Photo -->
        <div class="col-md-4 text-center">
          <% if @user.profile_photo.attached? %>
            <%= image_tag @user.profile_photo, class: "img-fluid rounded-circle mb-3", alt: "Profile Photo", style: "max-width: 200px; height: auto; border: 6px solid #434343f;" %>
          <% else %>
            <p style="color: #434343;">No profile photo uploaded</p>
          <% end %>
        </div>

        <!-- User Details -->
        <div class="col-md-8">
          <h5 class="card-title" style="color: #23548F;"><%= @user.name || 'No name provided' %></h5>
          <p class="card-text" style="color: #434343;"><strong>Email:</strong> <%= @user.email %></p>
          <p class="card-text" style="color: #434343;"><strong>Practice:</strong> <%= @user.practice || 'No practice provided' %></p>
          <p class="card-text" style="color: #434343;"><strong>Grade:</strong> <%= @user.grade || 'No grade provided' %></p>
          <p class="card-text" style="color: #434343;"><strong>Previous Clients:</strong> <%= @user.previous_clients.is_a?(Array) ? @user.previous_clients.join(', ') : 'No previous clients listed' %></p>
          <p class="card-text" style="color: #434343;"><strong>Skills:</strong> <%= @user.skills&.join(', ') || 'No skills listed' %></p>
          <p class="card-text" style="color: #434343;"><strong>Interest:</strong> <%= @user.interest || 'No interest provided' %></p>
          <p class="card-text" style="color: #434343;"><strong>Experience:</strong> <%= @user.experience || 'No experience provided' %></p>
          <p class="card-text" style="color: #434343;"><strong>Bench:</strong> <%= @user.bench ? 'Currently on bench' : 'Not on bench' %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "Back to Users", users_path, class: 'btn btn-primary', style: "background-color: #3d85c6; border-color: #3d85c6; color: white;" %>
  </div>
</div>