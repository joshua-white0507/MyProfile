<div class='container'>
  <h1 class='text-center mb-4'>All Users</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Skills</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.skills&.join(', ') || 'No skills' %></td>
          <td>
            <%= button_to "Delete", user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>