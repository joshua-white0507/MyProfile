        <th>Name</th>
        <th>Email</th>
        <th>Bench Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name || 'No name provided' %></td>
          <td><%= user.email %></td>
          <td><%= user.bench ? 'ðŸš©' : '' %></td>
          <td>
            <%= link_to "View Profile", user_path(user), class: 'btn btn-primary btn-sm' %>
