<div class='container'>
  <h1 class='text-center mb-4'>All Entries</h1>

  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Practice</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.practice %></td>
          <td>
            <%= button_to "Delete", user, method: :delete, data: { confirm: "Are you sure you want to delete this Project ?" }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>