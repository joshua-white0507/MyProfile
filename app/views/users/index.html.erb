<div class="container" style="background-color: #EEEEEE; padding: 20px; border-radius: 8px;">
  <h1 class="text-center mb-4" style="color: #23548F;">All Users</h1>

  <!-- Search Bar -->
  <div class="mb-4">
    <%= form_with url: users_path, method: :get, local: true, class: "d-flex mb-3" do |f| %>
      <%= f.text_field :query, value: params[:query], placeholder: "Search by name, interests, or skills", class: "form-control me-2", style: "border: 1px solid #3d85c6;" %>
      <%= f.submit "Search", class: "btn btn-primary", style: "background-color: #3d85c6; border-color: #3d85c6;" %>
    <% end %>
  </div>

  <!-- Filter Form -->
  <div class="mb-4">
    <%= form_with url: users_path, method: :get, local: true, class: "row g-3 align-items-center" do |f| %>
      <div class="col-auto">
        <%= f.label :practice, "Practice", class: "form-label fw-bold", style: "color: #3d85c6;" %>
        <%= f.select :practice, options_for_select(User.distinct.pluck(:practice).compact, params[:practice]), { prompt: "All Practices" }, class: "form-select", style: "border: 1px solid #3d85c6;" %>
      </div>
      <div class="col-auto">
        <%= f.label :grade, "Grade", class: "form-label fw-bold", style: "color: #3d85c6;" %>
        <%= f.select :grade, options_for_select(User.distinct.pluck(:grade).compact, params[:grade]), { prompt: "All Grades" }, class: "form-select", style: "border: 1px solid #3d85c6;" %>
      </div>
      <div class="col-auto">
        <%= f.label :bench, "Bench Status", class: "form-label fw-bold", style: "color: #3d85c6;" %>
        <%= f.select :bench, [["On Bench", true], ["Not on Bench", false]], { selected: params[:bench], prompt: "All Bench Statuses" }, class: "form-select", style: "border: 1px solid #3d85c6;" %>
      </div>
      <div class="col-auto">
        <%= f.label :previous_clients, "Previous Clients", class: "form-label fw-bold", style: "color: #3d85c6;" %>
        <%= f.select :previous_clients, options_for_select(User.distinct.pluck(:previous_clients).flatten.compact.uniq, params[:previous_clients]), { prompt: "All Clients" }, class: "form-select", style: "border: 1px solid #3d85c6;" %>
      </div>
      <div class="col-auto">
        <%= f.submit "Filter", class: "btn btn-primary", style: "background-color: #3d85c6; border-color: #3d85c6;" %>
      </div>
    <% end %>
  </div>

  <!-- Users Table -->
  <table class="table table-striped table-hover">
  <thead style="background-color: #3d85c6; color: white;">
  <tr>
    <th>Name</th>
    <th>Practice</th>
    <th>Grade</th>
    <th>Bench Status</th>
    <th>Actions</th>
  </tr>
</thead>
    <tbody style="color: #434343;">
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name || 'No name provided' %></td>
          <td><%= user.practice || 'No practice provided' %></td>
          <td><%= user.grade || 'No grade provided' %></td>
          <td><%= user.bench ? 'ðŸš© - On Bench' : '' %></td>
          <td>
            <%= link_to "View Profile", user_path(user), class: 'btn btn-primary btn-sm', style: "background-color: #3d85c6; border-color: #3d85c6;" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>