<div class='container'>
  <h1 class='text-center mb-4'>New Entry</h1>

  <%= form_with(model: @user, class: 'mb-4') do |form| %>
    <div class='mb-3'>
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class='mb-3'>
      <%= form.label :practice, class: 'form-label' %>
      <%= form.text_field :practice, class: 'form-control' %>
    </div>

    <%= form.label :email, class: "form-label mt-3" %>
    <%= form.email_field :email, class: "form-control border-danger input-size", required: true %>


    <%= form.label :password, class: "form-label mt-3" %>
          <%= form.password_field :password, class: "form-control border-danger input-size", required: true %>
          <%= form.label :password_confirmation, class: "form-label mt-3" %>
          <%= form.password_field :password_confirmation, class: "form-control border-danger input-size", required: true %>

    <%= form.label :experience, class: "form-label mt-3" %>
    <%= form.text_area :experience, class: "form-control input-size", rows: 5 %>

    <div class='mb-3'>
      <%= form.label :interest, "Select your interest", class: 'form-label mt-3' %>
      <%= form.select :interest, options_for_select(['Construction', 'Healthcare', 'Education', 'Manufacturing', 'Entertainment', 'Retail', 'Financial services', 'Other',]), { prompt: 'Choose an interest' }, class: 'form-control' %>
    </div>

    <div>
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div>
    <%= link_to "Back to home", root_path, class: 'btn btn-secondary' %>
  </div>
</div>